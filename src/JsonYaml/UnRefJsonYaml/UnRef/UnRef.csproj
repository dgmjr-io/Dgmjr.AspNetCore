<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <OutputType>Exe</OutputType>
        <AssemblyName>UnRef</AssemblyName>
        <Title>The JSON/YAML Schema Dereferencer</Title>
        <Description>This program takes either a JSON or YAML schema file and "dereferences" all of the "$ref"s in the file and replaces them with the actual schema definitions.</Description>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="../Dgmjr.UnRefJsonYaml.csproj" />
        <PackageReference Include="System.Text.Json.Usings" />
    </ItemGroup>
</Project>
